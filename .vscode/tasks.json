{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build & Run C++",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "$files = (Get-ChildItem -Recurse -Filter \"*.cpp\").FullName; g++ -g $files -o main.exe; ./main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
